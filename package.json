{
		"name": "electron-forge-test",
		"productName": "electron-forge-test",
		"version": "1.0.0",
		"description": "My Electron application description",
		"main": "src/index.js",
		"scripts": {
				"start": "electron-forge start",
				"package": "electron-forge package",

				"makeOLD": "electron-forge make",
				"make": "npm run make-linux-x64; npm run make-darwin-arm",
				"make-linux-x64": "echo '== LINUX X64 =='; cp ./not-packaged/ripgrep/rg-linux-x64 ./bin/rg; electron-forge make --platform linux --arch x64",
				"make-darwin-arm": "echo '== DARWIN ARM =='; cp ./not-packaged/ripgrep/rg-darwin-arm ./bin/rg; electron-forge make --platform darwin --arch arm64",

				"publish": "electron-forge publish",
				"lint": "echo \"No linting configured\""
		},
		"keywords": [],
		"author": {
				"name": "greg@1m",
				"email": "greg@1m"
		},
		"license": "MIT",
		"config": {
				"forge": {
						"packagerConfig": {
								"ignore": [
										"not-packaged"
								]
						},
						"makers": [
								{
										"name": "@electron-forge/maker-squirrel",
										"config": {
												"name": "electron_forge_test"
										}
								},
								{
										"name": "@electron-forge/maker-zip",
										"platforms": [
												"darwin"
										]
								},
								{
										"name": "@electron-forge/maker-deb",
										"config": {}
								},
								{
										"name": "@electron-forge/maker-rpm",
										"config": {}
								}
						]
				}
		},
		"dependencies": {
				"app-root-dir": "^1.0.2",
				"electron-squirrel-startup": "^1.0.0"
		},
		"devDependencies": {
				"@electron-forge/cli": "^6.0.0-beta.63",
				"@electron-forge/maker-deb": "^6.0.0-beta.63",
				"@electron-forge/maker-rpm": "^6.0.0-beta.63",
				"@electron-forge/maker-squirrel": "^6.0.0-beta.63",
				"@electron-forge/maker-zip": "^6.0.0-beta.63",
				"electron": "17.1.0"
		}
}
